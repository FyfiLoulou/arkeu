@{
    ViewData["Title"] = "Liste utilisateurs";
    ViewData["username"] = "TEMP TEST";
    ViewData["UserPseudo"] = "Xx_pseudo_xX";
    ViewData["UserRole"] = "Utilisateur";
    ViewData["UserPrenom"] = "Kevin";
    ViewData["UserNom"] = "Tremblay";
}

<div class="text-center">
    <h1 class="display-4">Liste Utilisateurs</h1>
    <div id="supprimer">
        <p>Voulez-vous bel et bien supprimer l'utilisateur @ViewData["UserPseudo"]</p>
        <button>Confirmation Supprimmer</button>   
    </div>
    <div class="user">

        @foreach (Utilisateur utilisateur in Model.GetCatalogue())
        {
            <a class="user" asp-controller="Admin" asp-action="Fiche?@utilisateur.Pseudo">
                <span>Pseudo: @utilisateur.Pseudo</span>
                <span>Role: @utilisateur.Role</span>
                <span>Prénom: @utilisateur.Prenom</span>
                <span>Nom: @utilisateur.Nom</span>
                <button>Supprimer</button>
            </a>
        }
