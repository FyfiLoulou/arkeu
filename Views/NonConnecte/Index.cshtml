@{// version 7.0.18 c#
    ViewData["Title"] = "Index";
}


<div class="formTop h-100">
    <div class="text-center formsTop">
        <form id="connForm" class="form2" asp-action="Connecte">
            <div>
                <div>
                    <label for="connPseudo">Pseudo</label>
                    <input type="text" class="conn-control" id="connPseudo" name="connPseudo" placeholder="Pseudo" maxlength="50" value='@TempData["temp_cPseudo"]'>
                </div>
                <div>
                    <label for="connMdp">Password</label>
                    <input type="password" class="conn-control" name="connMdp" id="connMdp" placeholder="Mot de passe" maxlength="100" value='@TempData["temp_cMdp"]'>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Connexion</button>
        </form>


        <form id="insForm" class="form2" asp-action="Inscrire">
            <div>
                <div>
                    <label for="insPrenom">Prénom</label>
                    <input type="text" class="ins-control" id="insPrenom" name="insPrenom" placeholder="Prénom" maxlength="50" value='@TempData["temp_iPrenom"]'>
                </div>
                <div>
                    <label for="insNomFamille">Nom de famille</label>
                    <input type="text" class="ins-control" id="insNomFamille" name="insNomFamille" placeholder="Nom de famille" maxlength="50" value='@TempData["temp_iNomFamille"]'>
                </div>
                <div>
                    <label for="insPseudo">Pseudo</label>
                    <input type="text" class="ins-control" id="insPseudo" name="insPseudo" placeholder="Pseudo" maxlength="50" value='@TempData["temp_iPseudo"]'>
                </div>
                <div>
                    <label for="insMdp">Password</label>
                    <input type="password" class="ins-control" id="insMdp" name="insMdp" placeholder="Mot de passe" maxlength="100" value='@TempData["temp_iMdp"]'>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">S'inscrire</button>
        </form>
    </div>
    <div class="container-fluid errorDiv">
        <div class="error">
            <span id="errorHeader">@if(!string.IsNullOrEmpty((string)TempData["erreurs"])){<partial name="VuePartielleErreur"/>}</span>
            <ul id="errors"></ul>
        </div>
    </div>
</div>

@section validationScript {
    <script async src="~/js/validationNonConnecte.js"></script>
}